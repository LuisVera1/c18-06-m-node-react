generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id       Int           @id @default(autoincrement())
  email    String        @unique
  career   Careers
  name     String
  password String
  plan     String
  role     Role          @default(Student)
  status   StudentStatus @default(Active)
  // class []
  // recods []
}

model Teacher {
  id       Int           @id @default(autoincrement())
  email    String        @unique
  name     String
  password String
  role     Role          @default(Teacher)
  status   TeacherStatus @default(Active)
  // class []
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
  role     Role   @default(Admin)
}

model Class {
  id   Int @id @default(autoincrement())
  code Int
  // carrer
  // classroom
  // days
  // hours
  // teacher
  // credits
  // spaces
  // students[]
}

model Subjects {
  code    Int  @id
  credits Int
  score   Int?
  year    Int?
}

enum Role {
  Student
  Teacher
  Admin
}

enum StudentStatus {
  Active
  Inactive
  Graduate
  Certificate
}

enum TeacherStatus {
  Active
  Inactive
}

enum Careers {
  Artes
  Biologia
  Psicologia
  IngSisComp
  Electronica
}
